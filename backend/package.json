{
  "name": "findclass.nz-backend",
  "version": "1.0.0",
  "description": "findclass.nz - Course Search Platform Backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "ts-node scripts/generate-openapi.ts && tsc --project tsconfig.build.json",
    "start": "node dist/server.js",
    "migrate": "ts-node src/db/migrate.ts",
    "migrate:status": "ts-node src/db/migrate.ts --status",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:integration": "INTEGRATION_TESTS=true vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "check": "npm run lint && npm run format && npm run typecheck",
    "typecheck": "tsc --noEmit --project tsconfig.build.json",
    "lambda:build": "esbuild src/lambda/index.ts --bundle --platform=node --outfile=dist/lambda/bundle.js --format=esm"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.984.0",
    "@aws-sdk/lib-dynamodb": "^3.984.0",
    "aws-lambda": "^1.0.7",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "nodemailer": "^8.0.0",
    "p-retry": "^7.1.1",
    "pg": "^8.18.0",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.160",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.2.1",
    "@types/nodemailer": "^7.0.9",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.27.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "findclass.nz Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/findclassnz/findclass.nz"
  },
  "keywords": [
    "findclass.nz",
    "findclass",
    "education",
    "course-search",
    "new-zealand"
  ],
  "license": "MIT"
}
