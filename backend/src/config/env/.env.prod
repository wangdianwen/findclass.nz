# =============================================================================
# FindClass Backend - Production Environment
# =============================================================================
# Production configuration (AWS hosted services)
# =============================================================================

# Environment
NODE_ENV=production
PORT=8080

# AWS Configuration (Real AWS credentials)
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=REPLACE_WITH_REAL_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_REAL_SECRET_KEY

# S3 (AWS hosted)
S3_ENDPOINT=https://s3.ap-southeast-2.amazonaws.com

# SMTP (Brevo - Production)
# Get credentials from: https://app.brevo.com/smtp
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_API_PORT=8025
SMTP_SECURE=false
SMTP_USER=your-brevo-login@email.com
SMTP_PASS=REPLACE_WITH_BREVO_SMTP_KEY
FROM_EMAIL=no-reply@findclass.nz
FROM_NAME=FindClass NZ

# Frontend URL
FRONTEND_URL=https://findclass.co.nz
CORS_ORIGIN=https://findclass.co.nz

# JWT (Production secrets - use strong, unique secrets)
JWT_SECRET=REPLACE_WITH_STRONG_32_CHAR_SECRET
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info

# Seed sample data
SEED_SAMPLE_DATA=false