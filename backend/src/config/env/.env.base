# =============================================================================
# FindClass Backend - Base Environment Configuration
# =============================================================================
# This file contains environment-agnostic configuration
# Environment-specific files should extend/override these values
# =============================================================================

# =============================================================================
# Application Configuration
# =============================================================================
API_VERSION=v1
LOG_FORMAT=json
LOG_FILE_PATH=./logs

# =============================================================================
# Authentication Configuration
# =============================================================================
JWT_ALGORITHM=HS256
JWT_ISSUER=findclass.nz-api
BCRYPT_ROUNDS=10
VERIFICATION_CODE_EXPIRES=600
PASSWORD_RESET_EXPIRES=3600

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_REQUESTS_AUTHENTICATED=1000
RATE_LIMIT_EMAIL_WINDOW=60
RATE_LIMIT_EMAIL_MAX=1
RATE_LIMIT_IP_WINDOW=3600
RATE_LIMIT_IP_MAX=100
RATE_LIMIT_LOCKOUT_SECONDS=900
RATE_LIMIT_MAX_ATTEMPTS=5

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_CREDENTIALS=true

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# =============================================================================
# Database Schema Configuration
# =============================================================================
DYNAMODB_TABLE_NAME=FindClass-MainTable

# =============================================================================
# S3 Configuration
# =============================================================================
S3_BUCKET_UPLOADS=findclass-uploads
S3_BUCKET_STATIC=findclass-static

# =============================================================================
# Local Development
# =============================================================================
SEED_SAMPLE_DATA=false

# =============================================================================
# JWT Default Expiry (Can be overridden by environment-specific config)
# =============================================================================
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# Default Log Level (Can be overridden by environment-specific config)
# =============================================================================
LOG_LEVEL=info