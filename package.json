{
  "name": "findclass.nz",
  "version": "1.0.0",
  "description": "findclass.nz - Course Search Platform (Mono Repo)",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "docs-architecture",
    "docs-product"
  ],
  "scripts": {
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "test:backend": "npm run test --workspace=backend",
    "test:frontend": "npm run test --workspace=frontend",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "install:all": "npm install",
    "staging:deploy": "bash scripts/deploy-staging.sh",
    "staging:deploy:build": "bash scripts/deploy-staging.sh --build",
    "staging:stop": "bash scripts/deploy-staging.sh --stop",
    "staging:clean": "bash scripts/deploy-staging.sh --clean",
    "staging:reset": "bash scripts/deploy-staging.sh --reset",
    "staging:status": "bash scripts/deploy-staging.sh --status",
    "staging:logs": "bash scripts/deploy-staging.sh --logs",
    "test:integration": "bash scripts/deploy-staging.sh && npm run test:e2e:integration && bash scripts/deploy-staging.sh --stop"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "findclass",
    "course-search",
    "education",
    "monorepo"
  ],
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.6",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1"
  }
}
